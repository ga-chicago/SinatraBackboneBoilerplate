<h3>Re-using Views! Oh my</h3>

<section id='list'>

</section>

<script type="text/javascript">
  var app = app || {};
  app.data = [
    { id: 1, thing: 'I need to do laundry', date: '8/19/2015' },
    { id: 2, thing: 'I need to get lunch', date: '8/19/2015'},
    { id: 3, thing: 'Sleep', date: '8/19/2015'},
    { id: 4, thing: 'Feed the cat her medicine', date: '8/20/2015'},
    { id: 5, thing: 'ROCK OUT', date: '8/21/2015'},
    { id: 6, thing: 'Nap', date: '8/22/2015'},
    { id: 7, thing: 'Prep for project week', date: '8/23/2015'}
  ];

  app.todoItemView = Backbone.View.extend({
    initialize: function() {

    },
    render: function(dataObject) {
      this.template = _.template($('#list-template').html());
      var renderedTemplate = this.template(dataObject);
      this.$el.append(renderedTemplate);
    }
  });

  // dat page is ready
  $(document).ready(function() {
    var todoItem = new app.todoItemView({
      el: $('#list')
    });

    for (var item in app.data) {
      todoItem.render(app.data[item]);
    }


  });

</script>

<script type="text/template" id='list-template'>
  <li>
    #<%%= id %>:
    <em><%%= thing %></em>;
    <strong>Due By:</strong> <%%= date %>
  </li>
</script>
